{
  "manifest_version": 3,
  "name": "Mr. White Chatbot",
  "version": "0.8",
  "description": "Cybersecurity assistant that detects suspicious behavior, phishing threats, and keyloggers on websites.",
  "author": "Martin Sy",
  "copyright": "Â© 2025 Mr.White. All rights reserved.",
  "name": "Mr.White",
  "icons": {
    "16": "icons/mrwhite16.png",
    "48": "icons/mrwhite48.png",
    "128": "icons/mrwhite128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*",
    "http://10.0.0.121:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Mr. White - Cyber Assistant",
    "default_icon": {
      "16": "icons/mrwhite16.png",
      "48": "icons/mrwhite48.png",
      "128": "icons/mrwhite128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/mrwhite48.png"],
      "matches": ["<all_urls>"]
    }
  ]
  
}
